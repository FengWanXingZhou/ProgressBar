<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    tools:context=".MainActivity">
    <ProgressBar
        android:id = "@+id/firstProgress"
        android:layout_width="700dip"
        android:layout_height="20dip"


        android:progress="0"
        android:layout_marginTop="200dip"
        android:layout_marginStart="100dip"
        style="@android:style/Widget.ProgressBar.Horizontal"

        android:progressDrawable="@drawable/scan_manual_signal_progressbar_green_color"
    />

    <ProgressBar
        android:id = "@+id/secondProgress"
        android:layout_width="700dip"
        android:layout_height="30dip"
        android:max="100"
        android:progress="0"
        android:layout_marginStart="100dip"
        android:layout_marginTop="100dip"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/scan_manual_signal_progressbar_green"
        />

</LinearLayout>